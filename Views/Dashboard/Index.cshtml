@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="text-center mb-4">Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title text-center">Cantidad de Cuentas</h5>
                <hr>
                <h2 class="text-center">@ViewBag.AccountsCount</h2>
                <hr>
                <div class="text-center">
                    <span class="bi bi-people fs-3 text-primary"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title text-center">Cantidad de Tickets</h5>
                <hr>
                <h2 class="text-center">@ViewBag.TicketsCount</h2>
                <hr>
                <div class="text-center">
                    <span class="bi bi-ticket fs-3 text-success"></span>
                </div>
            </div>
        </div>
    </div>
</div>

